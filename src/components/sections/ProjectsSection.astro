---
import { Card, CardContent, CardHeader } from '../ui/card';
import { Button } from '../ui/button';
import { Badge } from '../ui/badge';
import { Github } from 'lucide-react';

const projects = [
	{
		title: 'Landing page Devitech',
		description:
			'Desarrollo de landing page corporativa para una empresa tecnológica, optimizada para SEO y con diseño 100% responsivo. Implementación de animaciones fluidas y arquitectura escalable con integración de formularios y métricas de conversión.',
		image: '/img/devitech.webp',
		tech: ['Next.js', 'TypeScript', 'Node.js', 'WP HEADLESS', 'Tailwind CSS'],
		github: '#',
		demo: 'https://devitech.com.co/home',
		featured: true,
	},
	{
		title: 'Landing page KIEXCHANGE',
		description:
			'Implementación de landing page para plataforma de intercambio de criptomonedas, integrando API en tiempo real para mostrar datos de mercado. Diseño atractivo y adaptable, con enfoque en experiencia de usuario y optimización de carga.',
		image: '/img/kiex.webp',
		tech: ['React.js',  'Antd design'],
		github: '#',
		demo: 'https://kiex-web.lmcdigitalriver.online/#/',
		featured: true,
	},
	{
		title: 'NVD - Prueba técnica',
		description:
			'Aplicación web para consultar vulnerabilidades de la National Vulnerability Database (NVD), con filtrado dinámico y consumo de API mediante Axios. Diseño responsivo y optimizado para rendimiento, facilitando la consulta de datos masivos técnicos.',
		image: '/img/nvd-searcher.webp',
		tech: ['React.js', 'Axios', 'Tailwind CSS'],
		github: 'https://github.com/gmartine32/challenge-frontend?tab=readme-ov-file',
		demo: 'https://challenge-front.lmcdigitalriver.online',
		featured: true,
	},
	{
		title: 'TERPEL POS MOBILE',
		description:
			'Aplicación móvil para puntos de venta, con gestión integral de inventario, ventas y reportes en tiempo real. Implementación de interfaz ágil y modular con animaciones optimizadas para mejorar la experiencia del usuario reduciendo complejidad en el proceso de venta.',
		image: '/api/placeholder/600/400',
		tech: ['Next.js', 'SASS', 'Framer Motion'],
		github: '#',
		demo: '#',
		featured: false,
	},
	
	{
		title: 'Landing page campaña Haceb',
		description:
			'Desarrollo de landing page para campaña publicitaria de electrodomésticos, enfocada en aumentar la conversión de usuarios. Implementación de diseño atractivo, llamadas a la acción efectivas y optimización para dispositivos móviles.',
		image: '/api/placeholder/600/400',
		tech: ['React Native', 'Socket.io', 'Express'],
		github: '#',
		demo: '#',
		featured: false,
	},
	{
		title: 'MOVISAI',
		description:
			'Plataforma web para la caracterización socioeconómica de habitantes de la isla de San Andrés, con integración de API y visualización de datos interactiva mediante gráficos dinámicos, optimizada para análisis rápido y segmentado.',
		image: '/api/placeholder/600/400',
		tech: ['React', 'API Integration', 'Chart.js'],
		github: '#',
		demo: '#',
		featured: false,
	},
	{
		title: 'CENSO SAI',
		description:
			'Aplicación móvil para el levantamiento de datos censales en la isla de San Andrés, con soporte para funcionamiento offline y sincronización automática al restablecer la conexión. Gestión de datos segura y escalable con base de datos relacional y capaz de soportar el censo de mas de 30 mil vehículos de la Isla.',
		image: '/api/placeholder/600/400',
		tech: ['React Native','Node.js', 'TypeScript', 'Oracle'],
		github: '#',
		demo: '#',
		featured: false,
	},
];

const featuredProjects = projects.filter((p) => p.featured);
const otherProjects = projects.filter((p) => !p.featured);
---

<section id="projects" class="py-20 relative">
	<div class="container mx-auto px-6">
		<div class="max-w-7xl mx-auto">
			<!-- Header -->
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold mb-6">
					<span class="text-foreground">Mis</span>{' '}
					<span class="bg-gradient-primary bg-clip-text text-transparent">
						Proyectos
					</span>
				</h2>
				<p class="text-xl text-muted-foreground max-w-3xl mx-auto">
					Una selección de proyectos que demuestran mis habilidades y pasión por
					el desarrollo frontend
				</p>
			</div>

			<!-- Featured Projects -->
			<div class="mb-16">
				<h3 class="text-2xl font-semibold mb-8 text-accent">
					Proyectos Destacados
				</h3>
				<div class="grid md:grid-cols-2 gap-8">
					{featuredProjects.map((project, index) => (
						<Card
							key={project.title}
							className="bg-gradient-surface border-primary/10 hover:border-primary/20 hover:shadow-glow/20 transition-all duration-300 group overflow-hidden"
							style={{ animationDelay: `${index * 0.2}s` }}
						>
							<div class="relative overflow-hidden">
								<img
									src={project.image}
									alt={project.title}
									class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
								/>
								<div class="absolute inset-0 bg-gradient-to-t from-background/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
							</div>

							<CardHeader>
								<h4 class="text-xl font-semibold text-primary group-hover:text-accent transition-colors duration-300">
									{project.title}
								</h4>
								<p class="text-muted-foreground leading-relaxed">
									{project.description}
								</p>
							</CardHeader>

							<CardContent className="pt-0">
								<div class="flex flex-wrap gap-2 mb-6">
									{project.tech.map((tech) => (
										<Badge
											variant="secondary"
											className="bg-primary/10 text-primary border-primary/20"
										>
											{tech}
										</Badge>
									))}
								</div>

								<div class="flex gap-4">
									{project.github && project.github !== '#' && project.github !== '' ? (
										<a href={project.github} target="_blank" rel="noopener noreferrer">
											<Button
												variant="outline"
												size="sm"
												className="border-primary/20 text-primary hover:bg-primary/10"
											>
												<Github className="w-4 h-4 mr-2" />
												Código
											</Button>
										</a>
									) : (
										<Button
											variant="outline"
											size="sm"
											className="border-primary/20 text-primary hover:bg-primary/10"
											disabled
										>
											<Github className="w-4 h-4 mr-2" />
											Código
										</Button>
									)}
									{project.demo && project.demo !== '#' && project.demo !== '' ? (
										<a href={project.demo} target="_blank" rel="noopener noreferrer" class="bg-gradient-primary hover:shadow-glow transition-all duration-300 rounded-md px-4 py-2 text-sm font-medium text-primary-foreground inline-flex items-center justify-center">
											Ver Demo
										</a>
									) : (
										<Button
											size="sm"
											className="bg-gradient-primary hover:shadow-glow transition-all duration-300"
											disabled
										>
											Ver Demo
										</Button>
									)}
								</div>
							</CardContent>
						</Card>
					))}
				</div>
			</div>

			<!-- Other Projects -->
			<div>
				<h3 class="text-2xl font-semibold mb-8 text-accent">Otros Proyectos</h3>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					{otherProjects.map((project, index) => (
						<Card
							key={project.title}
							className="bg-gradient-surface border-primary/10 hover:border-primary/20 hover:shadow-glow/20 transition-all duration-300 group"
							style={{ animationDelay: `${index * 0.1}s` }}
						>
							<CardHeader>
								<h4 class="text-lg font-semibold text-primary group-hover:text-accent transition-colors duration-300">
									{project.title}
								</h4>
								<p class="text-sm text-muted-foreground leading-relaxed">
									{project.description}
								</p>
							</CardHeader>

							<CardContent className="pt-0">
								<div class="flex flex-wrap gap-1 mb-4">
									{project.tech.map((tech) => (
										<Badge
											variant="secondary"
											className="text-xs bg-primary/10 text-primary border-primary/20"
										>
											{tech}
										</Badge>
									))}
								</div>

								<div class="flex gap-2">
									{project.github && project.github !== '#' && project.github !== '' ? (
										<a href={project.github} target="_blank" rel="noopener noreferrer">
											<Button
												variant="outline"
												size="sm"
												className="border-primary/20 text-primary hover:bg-primary/10 text-xs"
											>
												<Github className="w-3 h-3 mr-1" />
												Código
											</Button>
										</a>
									) : (
										<Button
											variant="outline"
											size="sm"
											className="border-primary/20 text-primary hover:bg-primary/10 text-xs"
											disabled
										>
											<Github className="w-3 h-3 mr-1" />
											Código
										</Button>
									)}
									{project.demo && project.demo !== '#' && project.demo !== '' ? (
										<a href={project.demo} target="_blank" rel="noopener noreferrer" class="bg-gradient-primary hover:shadow-glow transition-all duration-300 rounded-md px-4 py-2 text-xs font-medium text-primary-foreground inline-flex items-center justify-center">
											Demo
										</a>
									) : (
										<Button
											size="sm"
											className="bg-gradient-primary hover:shadow-glow transition-all duration-300 text-xs"
											disabled
										>
											Demo
										</Button>
									)}
								</div>
							</CardContent>
						</Card>
					))}
				</div>
			</div>
		</div>
	</div>
</section>
