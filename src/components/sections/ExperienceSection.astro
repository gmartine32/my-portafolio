---
import { Card, CardContent, CardHeader } from '../ui/card';
import { Badge } from '../ui/badge';

const experiences = [
	{
		position: 'Full Stack Developer',
		company: 'Devitech S.A.S',
		period: 'Abr 2022 - Presente',
		description:
			'Desarrollo y mantenimiento de sistemas de venta de combustible a nivel nacional, así como de aplicaciones móviles con React Native. Configuración de servidores Ubuntu y automatización de procesos con Azure DevOps.',
		achievements: [
			'Implementación de sistema en tiempo real con React, TypeScript y Socket.io',
			'Desarrollo de app Android con Redux y React Native',
			'Optimización de monitoreo y despliegue usando Azure DevOps y Nginx'
		],
		tech: ['React', 'TypeScript', 'React Native', 'Socket.io', 'PostgreSQL', 'Azure DevOps', 'Ubuntu']
	},
	{
		position: 'Full Stack Developer',
		company: 'MoviSAI',
		period: 'Sep 2024 - Dic 2024',
		description:
			'Desarrollo de aplicaciones web y móviles para el departamento de tránsito de San Andrés. Participación en configuración de infraestructura y publicación en tiendas de apps.',
		achievements: [
			'Creación de app móvil para caracterización vehicular',
			'Despliegue completo con EC2, Oracle RDS y balanceo de carga con Nginx',
			'Integración frontend-backend con React y Express'
		],
		tech: ['React', 'TypeScript', 'Oracle', 'Express', 'React Native', 'AWS EC2', 'Nginx']
	},
	{
		position: 'Frontend Developer',
		company: 'Begima',
		period: 'Sep 2023 - Nov 2023',
		description:
			'Desarrollo de una plataforma e-commerce y landing page para una marca mexicana, enfocándome en la experiencia de usuario y rendimiento web.',
		achievements: [
			'Implementación de interfaz completa y adaptativa',
			'Optimización visual del sitio con enfoque en UX',
			'Entrega ágil en tiempo récord con diseño responsivo'
		],
		tech: ['React', 'Tailwind CSS', 'JavaScript']
	},
	{
		position: 'Android Developer (Freelance)',
		company: 'Freelance',
		period: 'Ago 2023 - Sep 2023',
		description:
			'Diseño e implementación de una aplicación de registro de asistencia para Android. Participación en todas las etapas: diseño UI, lógica de negocio y pruebas.',
		achievements: [
			'Desarrollo completo desde cero de app móvil funcional',
			'Diseño de interfaz intuitiva para usuarios no técnicos',
			'Entrega funcional en menos de un mes'
		],
		tech: ['React Native', 'JavaScript', 'Android']
	},
	{
		position: 'Full Stack Developer',
		company: 'Beefree',
		period: 'Ene 2022 - Jul 2022',
		description:
			'Construcción de servicios de reporte e integraciones para tiendas Etsy. Participación en backend, despliegue y configuración de servidores.',
		achievements: [
			'Desarrollo de API para extracción y visualización de reportes',
			'Configuración de servidor con Nginx para despliegue en producción',
			'Automatización de tareas repetitivas en el backend'
		],
		tech: ['Node.js', 'Express', 'Nginx', 'MongoDB']
	},
	{
		position: 'Frontend Developer',
		company: 'Kiiex',
		period: 'Ene 2022 - Jul 2022',
		description:
			'Creación y despliegue de landing page corporativa con diseño atractivo y funcional para mejorar la presencia digital de la marca.',
		achievements: [
			'Diseño e implementación de landing page responsiva',
			'Mejoras en performance y accesibilidad',
			'Despliegue ágil y eficiente'
		],
		tech: ['React', 'Tailwind CSS', 'JavaScript']
	}
];

const stats = [
	{ label: 'Años de Experiencia', value: '4+' },
	{ label: 'Proyectos Completados', value: '25+' },
	{ label: 'Tecnologías Dominadas', value: '15+' },
	{ label: 'Clientes Satisfechos', value: '100%' }
];
---

<section id="experience" class="py-20 relative">
	<div class="container mx-auto px-6">
		<div class="max-w-6xl mx-auto">
			<!-- Header -->
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold mb-6">
					<span class="text-foreground">Mi</span>{' '}
					<span class="bg-gradient-primary bg-clip-text text-transparent">Experiencia</span>
				</h2>
				<p class="text-xl text-muted-foreground max-w-3xl mx-auto">
				 Un recorrido por mi carrera profesional y los logros alcanzados
				</p>
			</div>

			<!-- Experience Timeline -->
			<div class="relative">
				<div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-gradient-primary hidden md:block" />

				{experiences.map((exp, index) => (
					<div
						class={`relative mb-12 md:mb-16 ${
							index % 2 === 0 ? 'md:pr-8 md:text-right' : 'md:pl-8 md:ml-auto'
						} md:w-1/2`}
						style={{ animationDelay: `${index * 0.3}s` }}
					>

						<Card className="bg-gradient-surface border-primary/10 hover:border-primary/20 hover:shadow-glow/20 transition-all duration-300 group">
							<CardHeader>
								<div class="flex flex-col md:items-start">
									<Badge
										variant="secondary"
										className="bg-primary/10 text-primary border-primary/20 w-fit mb-3"
									>
										{exp.period}
									</Badge>
									<h3 class="text-xl font-semibold text-primary group-hover:text-accent transition-colors duration-300">
										{exp.position}
									</h3>
									<h4 class="text-lg text-accent font-medium mb-4">{exp.company}</h4>
								</div>
								<p class="text-muted-foreground leading-relaxed">{exp.description}</p>
							</CardHeader>

							<CardContent className="pt-0">
								<div class="mb-6">
									<h5 class="text-sm font-semibold text-primary mb-3">Logros Destacados:</h5>
									<ul class="space-y-2">
										{exp.achievements.map((achievement, i) => (
											<li class="text-sm text-muted-foreground flex items-start">
												<span class="text-accent mr-2 mt-1">•</span>
												{achievement}
											</li>
										))}
									</ul>
								</div>

								<div>
									<h5 class="text-sm font-semibold text-primary mb-3">Tecnologías:</h5>
									<div class="flex flex-wrap gap-2">
										{exp.tech.map((tech) => (
											<Badge
												variant="secondary"
												className="text-xs bg-secondary/50 text-secondary-foreground border-secondary/20"
											>
												{tech}
											</Badge>
										))}
									</div>
								</div>
							</CardContent>
						</Card>
					</div>
				))}
			</div>

			<!-- Stats -->
			<div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-16">
				{stats.map((stat, index) => (
					<Card
						key={stat.label}
						className="bg-gradient-surface border-primary/10 hover:border-primary/20 transition-all duration-300 text-center"
						style={{ animationDelay: `${index * 0.1}s` }}
					>
						<CardContent className="p-6">
							<div class="text-3xl font-bold text-primary mb-2">{stat.value}</div>
							<div class="text-sm text-muted-foreground">{stat.label}</div>
						</CardContent>
					</Card>
				))}
			</div>
		</div>
	</div>
</section>
